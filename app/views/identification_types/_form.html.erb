<%= form_with(model: identification_type, local: true) do |form| %>
  <% if identification_type.errors.any? %>
    <%= render 'shared/error_messages', resource: identification_type%>  
  <% end %>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_field :description %>
  </div>

  <div class="field">
    <%= form.label :summary_description %>
    <%= form.text_field :summary_description %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
