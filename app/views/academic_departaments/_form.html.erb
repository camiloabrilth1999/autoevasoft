<%= form_with(model: academic_departament, local: true) do |form| %>
  <% if academic_departament.errors.any? %>
    <%= render 'shared/error_messages', resource: academic_departament%>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :code %>
    <%= form.text_field :code %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
