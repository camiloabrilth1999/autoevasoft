<% if !@academic_programs.count.zero? %>

<p id="notice"><%= notice %></p>

<h1>Programas academicos</h1>

<div class="table-responsive">
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Codigo</th>
        <th>Correo electronico</th>
        <th colspan="3">Opciones</th>
      </tr>
    </thead>

    <tbody>
      <% @academic_programs.each do |academic_program| %>
        <tr>
          <td><%= academic_program.name %></td>
          <td><%= academic_program.code %></td>
          <td><%= academic_program.email %></td>
          <td>
            <%= link_to(academic_program_path(academic_program.id), class: "") do %>
            <i class="fas fa-eye"></i>
            <% end %>
          </td>
          <td>
            <%= link_to(edit_academic_program_path(academic_program), class: "") do %>
            <i class="fas fa-edit"></i>
            <% end %>
          </td>
          <td>
            <%= link_to(academic_program_path(academic_program.id), method: :delete, data: { confirm: 'Are you sure?' }, class: "") do %>
              <i class="fas fa-trash-alt"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
</table>
</div>
<% end %>

<br>

<%= link_to 'Crear nuevo programa academico', new_academic_program_path %>
