<div class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <h1>Facultades</h1>
      </div>
    </div>
  </div>
</div>
<section class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
        <div class="card">
          <div class="card-header">
            <h3 class="card-title">Listado de las facultades en la UFPS</h3>
          </div>
          <!-- /.card-header -->
          <div class="card-body">
            <div id="example2_wrapper" class="dataTables_wrapper dt-bootstrap4">
              <div class="row">
                <div class="col-sm-12 col-md-6"></div>
                <div class="col-sm-12 col-md-6"></div>
              </div>
              <div class="row">
                <div class="col-sm-12">
                  <% if !@faculties.count.zero? %>
                  <div class="table-responsive">
                    <table class="table table-bordered">
                      <thead>
                        <tr>
                          <th>Nombre</th>
                          <th>Codigo</th>
                          <th colspan="3">Opciones</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% @faculties.each do |faculty| %>
                          <tr>
                            <td><%= faculty.name %></td>
                            <td><%= faculty.code %></td>
                            <td>
                              <%= link_to(faculty_path(faculty.id), class: "") do %>
                              <i class="fas fa-eye"></i>
                              <% end %>
                            </td>
                            <td>
                              <%= link_to(edit_faculty_path(faculty), class: "") do %>
                              <i class="fas fa-edit"></i>
                              <% end %>
                            </td>
                            <td>
                              <%= link_to(faculty_path(faculty.id), method: :delete, data: { confirm: '¿Estás seguro?' }, class: "") do %>
                                <i class="fas fa-trash-alt"></i>
                              <% end %>
                            </td>
                          </tr>
                        <% end %>
                      </tbody>
                    </table>
                    <%= link_to 'Crear nueva facultad', new_faculty_path, class: "btn btn-success btn-index-create float-right", role: "button" %>
                  </div>
                  <% else %>
                  <h2>No existen facultades en estos momentos, por favor, introduce los datos de la facultad y añadela</h2>
                  <%= link_to 'Crear nueva facultad', new_faculty_path, class: "btn btn-success btn-index-create float-right", role: "button" %>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
          <!-- /.card-body -->
        </div>
      </div>
    </div>
  </div>
</section>
