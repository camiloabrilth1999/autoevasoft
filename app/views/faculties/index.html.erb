<h1>Facultades</h1>
<div class="table-responsive">
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Codigo</th>
        <th colspan="3">Opciones</th>
      </tr>
    </thead>
    <tbody>
      <% @faculties.each do |faculty| %>
        <tr>
          <td><%= faculty.name %></td>
          <td><%= faculty.code %></td>
          <td>
            <%= link_to(faculty_path(faculty.id), class: "") do %>
            <i class="fas fa-eye"></i>
            <% end %>
          </td>
          <td>
            <%= link_to(edit_faculty_path(faculty), class: "") do %>
            <i class="fas fa-edit"></i>
            <% end %>
          </td>
          <td>
            <%= link_to(faculty_path(faculty.id), method: :delete, data: { confirm: 'Are you sure?' }, class: "") do %>
              <i class="fas fa-trash-alt"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

<%= link_to 'Crear nueva facultad', new_faculty_path, class: "btn btn-primary btn-index-create", role: "button" %>
