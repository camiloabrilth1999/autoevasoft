<div class="card-text">
  <%= form_with(model: faculty, local: true) do |form| %>
    <% if faculty.errors.any? %>
      <%= render 'shared/error_messages', resource: faculty%>
    <% end %>

    <div class="form-group">
      <%= form.label :name %>
      <%= form.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :code %>
      <%= form.text_field :code, class: "form-control" %>
    </div>

    <div class="actions">
      <%= link_to(request.referrer, class: "btn btn-custom-2 float-right") do %>
        Volver atras
      <% end %>
      <%= form.submit "Enviar formulario", class: "btn btn-success btn-index-create float-right mr-2" %>
    </div>
  <% end %>
</div>
