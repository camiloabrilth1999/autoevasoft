<div class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <h1>Profesores</h1>
      </div>
    </div>
  </div>
</div>
<section class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">

        <div class="card">
          <div class="card-header">
            <h3 class="card-title">Importar profesores</h3>
          </div>
          <!-- card-body -->
          <div class="card-body">
            <div id="example2_wrapper" class="dataTables_wrapper dt-bootstrap4">
              <div class="row">
                <div class="col-sm-12 col-md-12">
                  <%= form_tag import_self_evaluations_sampling_instruments_teachers_path, multipart: true, class: "float-right" do %>
                  <%= file_field_tag :file, class: "" %>
                  <%= button_tag(type: "submit", class: "btn btn-custom-2") do %>
                  <i class="fas fa-upload card_text_white"></i>
                  Cargar profesores
                  <% end %>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
          <!-- /.card-body -->
        </div>

        <div class="card">
          <div class="card-header">
            <h3 class="card-title">Listado de profesores</h3>
          </div>
          <!-- /.card-header -->
          <div class="card-body">
            <div id="example2_wrapper" class="dataTables_wrapper dt-bootstrap4">
              <div class="row">
                <div class="col-sm-12 col-md-6"></div>
                <div class="col-sm-12 col-md-6"></div>
              </div>
              <div class="row">
                <div class="col-sm-12">

                  <% if @teachers.count > 0 %>
                  <div class="table-responsive">
                    <table class="table table-bordered">
                      <thead>
                        <tr>
                          <th>Codigo</th>
                          <th>Nombre</th>
                          <th>Tipo de documento</th>
                          <th>Numero de documento</th>
                          <th>Departamento academico</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% @teachers.each do |teacher| %>
                        <tr>
                          <td><%= teacher.code %></td>
                          <td><%= teacher.full_name %></td>
                          <td><%= teacher.identification_type.summary_description %></td>
                          <td><%= teacher.document_number %></td>
                          <td><%= teacher.academic_departament.name %></td>
                        </tr>
                        <% end %>
                      </tbody>
                    </table>
                  </div>
                  <% else %>
                  <h3>No hay profesores registrados</h3>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
          <!-- /.card-body -->
        </div>
      </div>
    </div>
  </div>
</section>
