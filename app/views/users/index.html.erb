<h1>Usuarios</h1>
<div class="table-responsive">
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Codigo</th>
        <th colspan="3">Opciones</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.code %></td>
          <td>
            <%= link_to(user_path(user.uuid), class: "") do %>
            <i class="fas fa-eye"></i>
            <% end %>
          </td>
          <td>
            <%= link_to(edit_user_path(user), class: "") do %>
            <i class="fas fa-edit"></i>
            <% end %>
          </td>
          <td>
            <%= link_to(user_path(user.uuid), method: :delete, data: { confirm: 'Are you sure?' }, class: "") do %>
              <i class="fas fa-trash-alt"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

<%= link_to 'Crear nuevo director de programa', new_user_path, class: "btn btn-primary btn-index-create", role: "button" %>
