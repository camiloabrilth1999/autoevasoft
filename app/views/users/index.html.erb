<div class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <h1>Directores de programa</h1>
      </div>
    </div>
  </div>
</div>
<section class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
        <div class="card">
          <div class="card-header">
            <h3 class="card-title">Listado de los directores de programa</h3>
          </div>
          <!-- /.card-header -->
          <div class="card-body">
            <div id="example2_wrapper" class="dataTables_wrapper dt-bootstrap4">
              <div class="row">
                <div class="col-sm-12 col-md-6"></div>
                <div class="col-sm-12 col-md-6"></div>
              </div>
              <div class="row">
                <div class="col-sm-12">
                  <% if !@users.count.zero? %>
                  <div class="table-responsive">
                    <table class="table table-bordered">
                      <thead>
                        <tr>
                          <th>Codigo</th>
                          <th>Nombre(s)</th>
                          <th>Apellido(s)</th>
                          <th>Tipo de documento</th>
                          <th>Numero de documento</th>
                          <th>Correo electronico</th>
                          <th>Programa academico</th>
                          <th colspan="3">Opciones</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% @users.each do |user| %>
                          <tr>
                            <td><%= user.code %></td>
                            <td><%= user.name %></td>
                            <td><%= user.lastname %></td>
                            <td><%= user.identification_type.summary_description %></td>
                            <td><%= user.document_number %></td>
                            <td><%= user.email %></td>
                            <td><%= user.academic_program.name %></td>

                            <td>
                              <%= link_to(user_path(user.uuid), class: "") do %>
                              <i class="fas fa-eye"></i>
                              <% end %>
                            </td>
                            <td>
                              <%= link_to(edit_user_path(user), class: "") do %>
                              <i class="fas fa-edit"></i>
                              <% end %>
                            </td>
                            <td>
                              <%= link_to(user_path(user.uuid), method: :delete, data: { confirm: '¿Estás seguro?' }, class: "") do %>
                                <i class="fas fa-trash-alt"></i>
                              <% end %>
                            </td>
                          </tr>
                        <% end %>
                      </tbody>
                    </table>
                    <%= link_to 'Crear nuevo director de programa', new_user_path, class: "btn btn-success btn-index-create float-right", role: "button" %>
                  </div>
                  <% else %>
                  <h3>No existen directores de programa en estos momentos, por favor, introduce los datos del director de programa y registralo</h3>
                  <%= link_to 'Crear nuevo director de programa', new_user_path, class: "btn btn-success btn-index-create float-right", role: "button" %>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
          <!-- /.card-body -->
        </div>
      </div>
    </div>
  </div>
</section>
